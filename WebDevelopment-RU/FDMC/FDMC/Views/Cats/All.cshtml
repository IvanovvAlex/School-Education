@model IEnumerable<FDMC.Models.CatViewModel>


@{
    ViewData["Title"] = "Cats";
}

<h1>Cats</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Breed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var cat in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => cat.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => cat.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => cat.ImageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => cat.Breed.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@cat.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@cat.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@cat.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
